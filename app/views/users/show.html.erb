  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/sidebar', book: @book , user: @user %>
      </div>
      <div class="col-xs-9">
        <p id="You have updated user successfully">
          <%= notice %>
        </p>
        <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th><div class="col-xs-6"></div></th>
              <th><div class="col-xs-6">Title</div></th>
              <th><div class="col-xs-6">Opinion</div></th>
              <th colspan="3"></th>
            </tr>
            <% @books.each do |book| %>

            <tr>
              <td><div class="col-xs-6"><%= attachment_image_tag book.user, :profile_image, fallback: "no image.png", size:"100x100" %></div></td>
              <td><div class="col-xs-6"><%= link_to book.title, book_path(book.id) %></div></td>
              <td><div class="col-xs-6"><%= book.body %></div></td>
            </tr>
          <% end %>
          </thead>
          <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>





