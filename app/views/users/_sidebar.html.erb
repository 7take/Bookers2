      <p id="notice"></p>
          <% if @book.errors.any? %>
            <%= @book.errors.count %> errors prohibited this obj from being saved:
            <ul><% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
            <% end %>

          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, fallback: "no image.png", size:"100x100" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
              </tr>
            </tbody>
          </table>
              <center><%= link_to "", edit_user_path(current_user), class: "glyphicon glyphicon-wrench" %></center>
              <br>
            <h2>New book</h2>
              <%= form_for(book) do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title, class: "submit" %>
            <h4>Opinion</h4>
              <%= f.text_area :body, class: "submit" %>
            <h4><%= f.submit "Create Book", :class=> 'btn btn-primary' %></h4>
          <% end %>