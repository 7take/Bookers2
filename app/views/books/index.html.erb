

<div class="container">
         <div class="row">
         	<div class="col-xs-3">
         	<%= render 'users/sidebar', book: @book , user: @user %>
        	</div>
        	<div class="col-xs-9">
				<h2>Books</h2>
				<table>
					<thead>
						<tr>
							<th><div class="col-xs-6"></div></th>
							<th><div class="col-xs-3">Title</div></th>
							<th><div class="col-xs-3">Opinion</div></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><div class="col-xs-6"><%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :profile_image, fallback: "no image.png", size:"100x100" %>
							<% end %></div></td>
							<td><div class="col-xs-3"><%= link_to book.title, book_path(book.id) %></div></td>
							<td><div class="col-xs-3"><%= book.body %></div></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
</div>